<!-- 로그인 화면의 html파일을 ejs로 저장해놓은 곳 -->
<!-- MVC 모델 중 V -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

   
</head>
<body>
    <link rel="stylesheet" href="/css/home/login.css">
    <script src="/js/home/register.js" defer></script>
    <!-- 노드에서 개발할때는 단순히이렇게 하면 ejs에 접근할수 없다 -> 미들웨어를 등록해야함-->

    <div class="login-page">
        <div class="form">
          <form class="login-form">
            <input id="name" type="text" placeholder="이름"/>
            <input id="id" type="text" placeholder="아이디"/>
            <input id="passwd" type="password" placeholder="비밀번호"/>
            <input id="confirm-passwd" type="password" placeholder="비밀번호 확인"/>
            <p id="button">Sign up</p>
            <p class="message">Already registered? <a href="/login">login</a></p>
          </form>
        </div>
      </div>
</body>
</html>